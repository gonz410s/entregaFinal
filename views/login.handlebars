        </ul>
    </nav>

    <div class="login-container">
        <form>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="email" autocomplete="on"><br>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" type="password" placeholder="password"><br>
            </div>
            <button type="submit" class="login-btn">Loguearme!</button>
            <div>
                <button type="button" class="reset-password-btn"><a href="/resetpassword">Resetea tu Contrase√±a</a></button>
            </div>
        </form>
    </div>
  
    <script src="/static/js/login.js"></script>
</body>
</html>
